---
<section class="clients-component full-bleed strip">
	<div class="wrapper">
		<p class="tag">Clients</p>
		<h2 class="heading">Some of our favourite clients</h2>
		<ul class="scroller-list">
			{
				clients.map((client) => (
					<li>
						<a href={ `${client.website}` }>
							<ClientLogo svg={client.logo} />
						</a>
					</li>
				))
			}
		</ul>
	</div>
</header>

<style>
	.clients-component {
		background: var(--palette-highlight);
		color: var(--palette-contrast);
		padding: var(--space-m) 0;

		a {
			color: currentColor;
		}
	}

	.scroller-list {
		margin: 0;
		padding: 0;
		list-style: none;
		display: flex;
		align-items: center;
		overflow: scroll;

		a {
			display: block;
		}

		svg {
			width: 200px;
			height: auto;
		}
	}
</style>