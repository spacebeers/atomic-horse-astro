---
import Logo from "./Logo.astro";


---
<div class="logo">
	<Logo /> <span>Atomic</span>Horse digital
</div>

<style>
	.logo {
		display: flex;
		align-items: center;
		text-transform: uppercase;
		font-size: var(--step--1);
		@media (min-width: 768px) {
			font-size: var(--step-0);
		}

		span {
			font-weight: var(--fw-medium);
			margin-left: var(--space-3xs);
		}

		svg {
			width: 44px;
			height: 44px;
			@media (min-width: 768px) {
				width: 48px;
				height: 48px;
			}
		}
	}
</style>
