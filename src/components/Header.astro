---
import { BASE } from '../utils/constants';
import FullLogo from './FullLogo.astro';
const pages = [
	{
		name: "Services",
		path: '/services'
	},
	{
		name: "Work",
		path: '/work'
	},
	{
		name: "Contact us",
		path: '/contact-us'
	},
];

---
<header>
	<a href="/">
		<FullLogo />
	</a>
	<nav>
		<ul>
			{
				pages.map((page) => (
					<li class={Astro.url.pathname === page.path ? "active" : ""}>
						<a href={ `${page.path}` }>{ page.name }</a>
					</li>
				))
			}
			<li>
				<button class="toggle-button">
					<svg width="29" height="22" viewBox="0 0 29 22" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M1.5 1.5H27.5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
						<path d="M1.5 10.5H27.5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
						<path d="M1.5 20.5H27.5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
					</svg>						
				</button>
			</li>
		</ul>
	</nav>
</header>

<style>
	header {
		background: transparent;
		padding: var(--space-xs) 0;
		display: flex;
		align-items: center;
		justify-content: space-between;
		
		a {
			text-decoration: none;
		}

		.toggle-button {
			display: flex;
			background: transparent;
			border: none;
			color: currentColor;
			cursor: pointer;
		}

		nav {
			ul {
				list-style: none;
				margin: 0;
				padding: 0;
				display: flex;
				align-items: center;
				text-transform: uppercase;
			}

			li + li {
				margin-left: var(--space-m);
			}

			.active {
				a {
					color: var(--palette-highlight);
				}
			}

			a {
				font-size: var(--step--1);
				color: var(--palette-light);
			}
		}
	}
</style>