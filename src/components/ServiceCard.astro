---
import { Image } from 'astro:assets';

interface Props {
	heading: string;
	imageSrc: any;
	imageAlt: string;
}

const { heading, imageSrc, imageAlt } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/**/*.{jpeg,jpg,png,gif,svg}');
if (!images[imageSrc]) throw new Error(`"${imageSrc}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,svg}"`);
console.log(images);
console.log(imageSrc);
---

<section class="service-card">
	<h2>{ heading }</h2>
	<div class="service-card-grid">
		<div class="service-card-grid__content">
			<slot name="card-content" /> 
		</div>	
		<div class="service-card-grid__image">
			<Image src={imageSrc} alt={imageAlt} width="800" height="400" class="card-image" />
		</div>	

	</div>
</section>
<style>
	.service-card {
		width: 100%;

		.service-card-grid {
			display: flex;
			justify-content: space-between;
			align-items: flex-start;
		}

		.service-card-grid__image {
			flex: 0 0 36%;
			margin-left: 4%;
			border-radius: var(--border-radius);
			margin-bottom: var(--space-s);
			background: radial-gradient(85.3% 85.3% at 50% 117.34%, var(--palette-highlight) 0%, #282727 100%);
			display: flex;
			align-items: center;
			justify-content: center;
			aspect-ratio: 1 / 1;
			padding: var(--space-l);

			img {
				border-radius: var(--border-radius);
			}  
		}

		.card-image {
			width: 60%;
			height: auto;
		}
		
		h2 {
			margin-bottom: var(--space-s);
		}
	}
</style>
